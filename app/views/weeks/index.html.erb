<h1>Week by week</h1>

<table class="table table-bordered table-condensed">
  <thead>
    <tr>
      <th>Number</th>
      <th>Friday</th>
      <th>Solution</th>
      <th>Bets</th>
      <th>Your bet</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @weeks.each do |week| %>
      <tr class="<%= if week == current_week then "success" end %>">
        <td><%= week.number %></td>
        <td><%= week.friday %></td>
        <td><%= week.print_solution %></td>
        <td><%= week.bets.size %>
          (<%= week.bets_missing %> missing)
        </td>
        <td><%= display_bet(week.bet_from(current_user), week.solution) %>
        <td>
          <%= link_to 'Show', week %>
          <% if current_user.is_admin? %>
            |
            <%= link_to 'Add solution', edit_week_path(week, set: 'solution') %>
            |
            <%= link_to 'Set prize', edit_week_path(week, set: 'prize') %>
            <% if week == current_week %>
              |
              <%= link_to 'Request bets', request_bets_week_path(week),
                remote: true %>
            <% end %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

