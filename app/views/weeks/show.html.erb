<p id="notice"><%= notice %></p>

<p>
  <strong>Number:</strong>
  <%= @week.number %>
</p>

<p>
  <strong>Friday:</strong>
  <%= @week.friday %>
</p>

<p>
  <strong>Solution:</strong>
  <%= @week.print_solution %>
</p>

<% if @bets.any? %>
  <h4>Bets for this week</h4>
  <ul>
    <% @bets.each do |bet| %>
      <li>
        <%= bet.user == current_user ? "<u>#{bet.user.name}</u>".html_safe : bet.user.name %>:
        <%= @week.bet_from(bet.user).html_safe %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= link_to 'Back', weeks_path %>
