<%= form_for(@week) do |f| %>
  <% if @week.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@week.errors.count, "error") %>
        prohibited this week from being saved:</h2>

      <ul>
      <% @week.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.fields_for :solution do |b| %>
    <div class="form-group">
      <%= b.label :numbers %>
      <%= b.select :numbers, options_for_select((1..50).to_a,
        @week.solution && @week.solution["numbers"]),
        {}, { multiple: true, class: "form-control" }%>
      <p class="help-block">5 numbers from 1 to 50, inclusive.</p>
    </div>
    <div class="form-group">
      <%= b.label :stars %>
      <%= b.select :stars, options_for_select((1..11).to_a,
        @week.solution && @week.solution["stars"]),
        {}, { multiple: true, class: "form-control" }%>
      <p class="help-block">2 numbers from 1 to 11, inclusive.</p>
    </div>
  <% end %>
  <div class="action">
    <%= f.submit "Update", class: "btn btn-success" %>
  </div>
<% end %>
